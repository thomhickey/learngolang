{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "env": {
                "PORT": "8081",
                "DB_HOST": "localhost",
                "DB_PORT": "5433",
                "DB_USER": "thom",
                "DB_NAME": "todo_db"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Attach to Air",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "preLaunchTask": "air",
            "processId": "${command:pickProcess}"
        }
    ]
}